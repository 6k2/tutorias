{
  "rules": {
    "status": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid && (!newData.exists() || (newData.hasChildren(['online','lastSeen','expiresAt']) && newData.child('expiresAt').val() <= now + 60000))"
      }
    },
    "typing": {
      "$conversationId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid && (!newData.exists() || newData.child('expiresAt').val() <= now + 5000)"
        }
      }
    },
    ".read": false,
    ".write": false,
    "_todo": "Limitar lecturas a participantes cuando guardemos metadata adicional"
  }
}
